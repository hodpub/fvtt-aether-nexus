{{! Sheet Header }}
<header class='sheet-header'>
  <img class='profile-img' src='{{actor.img}}' data-edit='img' data-action='onEditImage' title='{{actor.name}}'
    height='100' width='100' />
  <div class='header-fields'>
    <div class='document-name'>
      <input name='name' type='text' value='{{actor.name}}' placeholder='Ship Name' />
    </div>
    {{! The grid classes are defined in scss/global/_grid.scss. To use,
    use both the "grid" and "grid-Ncol" class where "N" can be any number
    from 1 to 12 and will create that number of columns. }}
    <div class='resources grid grid-4col'>
      <div class='resource flex-group-center'>
        <label for='system.aspecs.stone' class='resource-label rollable' data-action='roll' data-roll-type='aspects'
          data-aspect='stone'>{{localize 'AETHER_NEXUS.Aspect.stone'}}</label>
        <input type='number' name='system.aspects.stone' value='{{system.aspects.stone}}' data-dtype='Number' min="-10"
          max="18" onfocus="this.select()" />
      </div>
      <div class='resource flex-group-center'>
        <label for='system.aspecs.flux' class='resource-label rollable' data-action='roll' data-roll-type='aspects'
          data-aspect='flux'>{{localize 'AETHER_NEXUS.Aspect.flux'}}</label>
        <input type='number' name='system.aspects.flux' value='{{system.aspects.flux}}' data-dtype='Number' min="-10"
          max="18" onfocus="this.select()" />
      </div>
      <div class='resource flex-group-center'>
        <label for='system.aspecs.aether' class='resource-label rollable' data-action='roll' data-roll-type='aspects'
          data-aspect='aether'>{{localize 'AETHER_NEXUS.Aspect.aether'}}</label>
        <input type='number' name='system.aspects.aether' value='{{system.aspects.aether}}' data-dtype='Number'
          min="-10" max="18" onfocus="this.select()" />
      </div>
      <div class='resource flex-group-center'>
        <label for='system.aspecs.hearth' class='resource-label rollable' data-action='roll' data-roll-type='aspects'
          data-aspect='hearth'>{{localize 'AETHER_NEXUS.Aspect.hearth'}}</label>
        <input type='number' name='system.aspects.hearth' value='{{system.aspects.hearth}}' data-dtype='Number'
          min="-10" max="18" onfocus="this.select()" />
      </div>
    </div>

    <div class='resources grid grid-4col'>

      {{! "flex-group-center" is also defined in the _grid.scss file
      and it will add a small amount of padding, a border, and will
      center all of its child elements content and text. }}
      <div class='resource flex-group-center'>
        <label for='system.energy.value' class='resource-label'>
          {{localize 'AETHER_NEXUS.Item.Frame.FIELDS.energy.label'}}
        </label>
        <div class='resource-content flexrow flex-center flex-between'>
          <input type='number' name='system.energy.value' value='{{system.energy.value}}' data-dtype='Number'
            onfocus="this.select()" />
          <span> / </span>
          <input type='number' name='system.energy.max' value='{{system.energy.max}}' data-dtype='Number'
            onfocus="this.select()" />
        </div>
      </div>

      <div class='resource flex-group-center'>
        <label for='system.damage' class='resource-rollable rollable' data-action='roll' data-roll-type='resources'
          data-dice="armor">{{localize
          'AETHER_NEXUS.Resource.armor'}}</label>
        <div class='resource-content flexrow flex-center flex-between'>
          <input type='text' name='system.dice.armor.value' value='{{system.dice.armor.value}}'
            onfocus="this.select()" />
          <span> / </span>
          <input type='text' name='system.dice.armor.max' value='{{system.dice.armor.max}}' onfocus="this.select()" />
        </div>
      </div>
      <div class='resource flex-group-center'>
        <label for='system.damage' class='resource-rollable rollable' data-action='roll' data-roll-type='resources'
          data-dice="damage">{{localize
          'AETHER_NEXUS.Resource.damage'}}</label>
        <div class='resource-content flexrow flex-center flex-between'>
          <input type='text' name='system.dice.damage.value' value='{{system.dice.damage.value}}'
            onfocus="this.select()" />
          <span> / </span>
          <input type='text' name='system.dice.damage.max' value='{{system.dice.damage.max}}' onfocus="this.select()" />
        </div>
      </div>
      <div class='resource flex-group-center'>
        <label for='system.damage' class='resource-rollable rollable' data-action='roll' data-roll-type='resources'
          data-dice="catalyst">{{localize
          'AETHER_NEXUS.Resource.catalyst'}}</label>
        <div class='resource-content flexrow flex-center flex-between'>
          <input type='text' name='system.dice.nexus.value' value='{{system.dice.nexus.value}}'
            onfocus="this.select()" />
          <span> / </span>
          <input type='text' name='system.dice.nexus.max' value='{{system.dice.nexus.max}}' onfocus="this.select()" />
        </div>
      </div>
    </div>
  </div>
</header>