<div>
  <datalist id="dice">
    <option value="0">
    <option value="d4">
    <option value="d6">
    <option value="d8">
    <option value="d10">
    <option value="d12">
  </datalist>

  <input type='text' name='system.dice.damage.value' value='{{system.dice.damage.value}}' />
  <input type='text' name='system.dice.damage.max' value='{{system.dice.damage.max}}' />
  <input type='text' name='system.dice.nexus.value' value='{{system.dice.nexus.value}}' />
  <input type='text' name='system.dice.nexus.max' value='{{system.dice.nexus.max}}' />
  <input type='text' name='system.dice.armor.value' value='{{system.dice.armor.value}}' />
  <input type='text' name='system.dice.armor.max' value='{{system.dice.armor.max}}' />

  <label name="roll.dice.damage" class='rollable' data-action='roll' data-roll-type='damage'>{{{localize
    "AETHER_NEXUS.Resource.damage"}}}</label>
  <label name="roll.dice.nexus" class='rollable' data-action='roll' data-roll-type='resources'
    data-dice="nexus">{{{localize "AETHER_NEXUS.Resource.nexus"}}}</label>
  <label name="roll.dice.armor" class='rollable' data-action='roll' data-roll-type='resources'
    data-dice="armor">{{{localize "AETHER_NEXUS.Resource.armor"}}}</label>
</div>